<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailedPostActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ProgressBar
            android:id="@+id/detailedpostloadingprogressbarid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />


        <LinearLayout
            android:id="@+id/currentpostid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        />

        <TextView
            android:id="@+id/requestsheadertextviewid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requests"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postrequestsrecyclerviewid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postcommentsrecyclerviewid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

</ScrollView>