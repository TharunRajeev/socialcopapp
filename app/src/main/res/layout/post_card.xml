<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:elevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_weight="1"
                android:id="@+id/postlocationid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                tools:text="Location"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:ellipsize="marquee"
                android:textColor="@android:color/black"
                android:background="@drawable/border_rectangle"
                android:singleLine="true" />


            <LinearLayout
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                >

                <TextView
                    android:id="@+id/postusernameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    tools:text="Username"

                    />
                <ImageView
                    android:id="@+id/postuserprofileid"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:src="@drawable/ic_account_circle_black_24dp"
                    tools:text="Location"
                    android:layout_gravity="end"
                    />


            </LinearLayout>



        </LinearLayout>


        <ImageView
            android:id="@+id/postmediaimageviewid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/posttagid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tags"
            android:textColor="@android:color/black"
            android:background="@drawable/border_rectangle"
            android:layout_gravity="end"
            android:textSize="20sp"
            />


        <TextView
            android:id="@+id/postdescriptionid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            tools:text="Description"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/postrequestbuttonid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Request"
                />

            <Button
                android:id="@+id/postacceptid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:visibility="gone"
                />
        </LinearLayout>

            <TextView
                android:id="@+id/createdattextid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                tools:text="Created At"
                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/postupvoteid"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/upvote"
                    />
                <TextView
                    android:id="@+id/upvotescountid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/postplusoneid"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_plus_one_black"
                    />
                <TextView
                    android:id="@+id/plusonescountid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/postcommentid"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_comment_black_24dp"
                    />
                <ImageButton
                    android:id="@+id/postshareid"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_share_black_24dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/dots"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>